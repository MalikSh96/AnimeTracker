@model AnimeTracker.Models.Anime


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Add</title>

    <link href="~/css/viewscss/add.css" rel="stylesheet" />
</head>
<h1>Add Anime data</h1>
<body>
    <form method="post" asp-controller="anime" asp-action="AddAnime" enctype="multipart/form-data">
        <table class="container">
            <tr>
                <td>Anime name</td>
                <td>
                    <input type="text" asp-for="animename" required="required" />
                </td>
            </tr>
            <tr>
                <td>Description</td>
                <td>
                    <textarea asp-for="description" required="required" style="width:350px; height:150px"> </textarea>
                </td>
            </tr>
            <tr>
                <td>Total of episodes</td>
                <td>
                    <input type="number" asp-for="episodes" required="required" />
                </td>
            </tr>
            <tr>
                <td>Genre</td>
                <td>
                    <input type="text" asp-for="genre" required="required" />
                </td>
            </tr>
            <tr>
                <td>Studio</td>
                <td>
                    <input type="text" asp-for="studio" required="required" />
                </td>
            </tr>
            <tr>
                <td>Source material</td>
                <td>
                    <input type="text" asp-for="anime_source" required="required" />
                </td>
            </tr>
            <tr>
                <td>Anime rating</td>
                <td>
                    <input type="text" asp-for="rating_pg" required="required" />
                </td>
            </tr>
            <tr>
                <td>Release date</td>
                <td>
                    <input type="text" asp-for="release_date" required="required" />
                </td>
            </tr>
            <tr>
                <td>Upload image</td>
                <td>
                    <input type="file" multiple name="files" />
                    @*<input type="file" name="file" />*@
                </td>
            </tr>
            <tr>
                <td>&nbsp;</td>
                <td>
                    <input type="submit" value="Save" />
                </td>
            </tr>
        </table>
    </form>
</body>
</html>
